@import 'nib'

@import 'normalize'

@import 'fonts'

vendor-prefixes = webkit o ms moz


$page_width=982
$background=#264F80

/*columns*/
$col_margin=10

$col_1d1=$page_width

$col_1d2=204
$col_2d2=$page_width - $col_1d2 - $col_margin;

$col_1d3=204
$col_2d3=408
$col_3d3=$page_width - $col_1d3 - $col_2d3 - 2*$col_margin;


@import 'libs'


/**
 * ESTRUCTURA
 */
body
	background: $background
	font-family: calibri,helvetica,arial,sans-serif,tahoma,verdana
	font-size: 12px
	#main_content
		width: ($page_width)px
		margin-left: auto
		margin-right: auto
		text-align: center
		position: relative
		z-index: 0
		background white
				

/**
 * COMMON : HEADER
 */
.id_header
	background: url('../img/particular/common/header/bg.jpg') no-repeat
	height: 123px
	margin-bottom: -32px



/**
 * COMMON : MENU PRINCIPAL
 */		
.id_header_menu
	border: 0;
	padding: 0;
	z-index: 1;
	overflow: visible;
	text-align: center
	overflow visible
	height 30px
	.area_menu
		ul
			list-style: none;
			padding: 0;
			margin: 0;			
			display: inline-block;
			li.li
				position: relative;
				margin: 0 2px 0 2px;			
				border-radius: 10px 10px 0px 0px;
				background: #0188BE;			
				border: 0;
				text-align: center;
				padding: 0	
				float: left
				transition:all 0.5s linear;									
				a
					height: auto;
					color: #FFF;
					font-weight: bold;
					padding: 6px 19px 6px 19px;
					float: left;
					white-space: nowrap;
					font-family: 'caviar_dreamsregular', "Helvetica Neue"
					font-size: 12px;
					text-transform: uppercase;
					text-decoration: none;
				.selected,					
				&:hover
					transition:all 0.5s linear;					
					background #264F80
					a
						text-decoration: underline
				.area_menu
					position absolute
					top 25px
					left -1px
					overflow hidden
					ul
						margin-top -100%
						box-shadow 4px 2px 10px #444
						display block
						transition:all 0.1s linear;
						li.li
							border-radius 0 !important;
							width 100% 
							clear left
							float left
							border-top 1px solid #ccc
							a
								font-size: 10px;
								padding: 9px 19px;
				&:hover
					.area_menu
						ul
							margin-top 0%
							transition:all 0.1s linear;							
							li.li
								a
									text-decoration: none;
									width 100%
									text-align left
								&:hover
									a
										text-decoration: underline;


/**
 * COMMON : FOOTER
 */
.id_footer
	background-color: #585858;
	height: 28px;
	padding-top: 5px;
	padding-bottom: 5px;
	padding-left: 0;
	padding-right: 0;	
	color #FFF
	.info
		color: #CCC;
		.copy
			top: 4px;
			left: 0px;	
			text-align center	
			width 100%	
	.visitas
		top: 5px;
		right: 10px;			
	.footer_by
		top 22px;
		left 45%;		
		width 10%
		a
			color white
			

/**
 * 	HOME : BANNER PRINCIPAL
 */
.id_banner_main
	overflow: visible;
	width: 100%;
	float: left;	
	margin 0px 0 0 -7px
	.div_inner
		margin 0 0
		padding 0
		.listado_item 
			.foto
				width: 100%;
				height: auto;
				text-align: center;
				overflow: hidden;
				display: block;
				margin: 0 auto;
				background-color: #F0F0F0;
				border-color: #FFF;
				border-style: solid;
				border-width: 0px;
				padding: 0;
			.texto 
				left: 0px;
				bottom: -7px;
				padding: 25px 30px 20px;
				opacity: 0.8;
				font-size: 1.5em !important;
				background: #264F80;
				color: #FFF !important;
				border-radius: 0 !important;
				font-weight: bold;			
				min-height: 29px;
				position: absolute;
				width: 33%;
	.barra_abajo
		padding: 0 0 10px;
		padding-bottom: 0 !important;
		text-align right
		height 25px
		.listado_paginacion
			margin-right: 10px;
			text-align: right;
			font-weight: normal;
			display: inline-block;
			a
				cursor pointer
				float left
				margin-left: 10px !important;
				font-size: 0.9em !important;
				padding: 6px 9px;
				background-color black
				color white
				&.selected
					background-color white
					color black


/**
 * HOME : ITEMS NOTICIAS
 */
.id_news_items_regular
	overflow: visible;
	width: 100%;
	float: left;
	margin-left: -16px;	
	.listado_items
		position: relative;
		margin: 0 !important;
		padding: 0 !important;		
		border-top: 0;
		.listado_item
			position: relative;
			float: left;
			clear: none;
			border: 0;
			margin-right: 0px !important;
			border-bottom: 1px dashed #CCC;
			width: 18% !important;
			height: 207px !important;
			margin: 0 0% 10px 3% !important;
			background-color: #DBF2FF !important;
			padding: 10px 2% !important;
			border-bottom: 0 !important;
			border-radius: 10px;
			a.vermas,
			a.nombre
				color: #00527D;
				display: block;
				font-family: Arial
			a.nombre
				height: 24px !important
				font-size 1.17em !important
				text-decoration: none
				&:hover
					text-decoration underline



			












