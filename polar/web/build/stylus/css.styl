					text-decoration underline
			.texto
				color white
				line-height 1.3em


/**
 * HOME : BLOG
 */

.blog
	margin-top 10px
	.tabs
		ul
			background #264F80
			padding 6px 0 0
			// float left
			text-align center
			li
				line-height 1.2em
				background #0188BE
				list-style none
				display inline-block
				margin 0 7px
				// float left
				> a
					padding 4px 10px
					color white
					font-size 1.1em
					float left
					cursor pointer
					text-transform uppercase
			.active 
				a
					color #FC0
	section		
		display none
		background #DDD
		overflow hidden
		position relative
		padding 15px 30px 0px
		.inner
			height 215px !important				
			.slides
				width 100% !important
				> ul
					> li
						float left
						.nombre
							// font-size 1.2em
							color #264F80
							font-weight bold
						.fecha
							font-weight bold	
						.texto
							font-size 1.1em
						.foto
							width 100%
							text-align center
							float left	
							img
								width auto
								height 120px									
		.footer
			margin 0 -30px
			background #125586
			color white
			padding 4px 4px
			text-align center
			a
				color white
				cursor pointer
			.prev
				float left
				&:before
					content "«"
			.next	
				float right
				&:after
					content "»"						
		&.show	
			display block
		

