
/**
 * PAGES:
 */
.page
	margin-left -15px
	margin-right -15px
	margin-top 10px
	margin-bottom 10px
	background rgba(white,0.7)
	min-height 400px
	border-radius 10px
	overflow hidden
	> .header
		// border-radius 10px 10px 0 0
		background linear-gradient(top, white, #bbb)
		padding 7px 20px
		h1
			font-family 'Titillium Web' Arial
			text-transform uppercase
			font-size 1.1em
			font-weight bold
	> .inner
		padding 20px 20px 10px
		// LIST
		> ul.listado_items.list
			li.listado_item
				float left
				padding 15px 0px
				width 100%;
				position relative
				.foto
					float left
					margin 0 10px 0 0	
				.nombre
					font-size 1em
					font-weight bold	
				.texto
					display inline
		// GRID
		> ul.listado_items.grid
			text-align center
			li.listado_item
				float left
				width 33%
				padding 15px 5px
				margin 0 auto
				a.foto
				figure.foto
					display inline-block
					width 150px
					height 110px
					line-height @height
					background white
					border-radius 4px
					padding 0
					text-align center
					border 0
					overflow hidden
					position relative
					img
						margin 0 -25% !important
						border-radius 3px
		// CONTENT				
		> .content
			text-align justify
			img
				float left
				max-width 100%
				margin 0 15px 15px 0	
	> .footer
		text-align center			


/**
 * FORM : DEFAULT
 */
form
	text-align center
	ul
		display inline-block
		li
			text-align left
			label.empty
				display none			
			&.legend
				color #000
				margin-bottom 10px
				font-weight bold					
				text-indent -20px
			label
				vertical-align top			
				text-transform uppercase
				width 180px
				font-size 1em
				color #666
				&.required:after
					content "*"
					color red
			input[type=text]
			select
			textarea
				border 1px solid #ccc
				max-width 100%			
				width 220px	
				font-size 1.1em
			&.submit
			&.pie	
				text-align center				

					
	img
		float left
		margin 0 0 5px 0 !important
	p
		display inline-block	


/**
 * PAGES: ASIDE MENU
 */
.menu_left
	margin-top 10px
	border 5px solid #CCC
	border-radius 18px
	overflow hidden
	.header
		background #0188BE
		padding 6px 12px
		text-transform uppercase
		h2
			font-family Arial
			font-weight bold			
			font-size 1em
			color white			
			font-family 'Titillium Web' Arial			
			a
				color white			
	.inner	
		width 100%
		min-height 150px
		background white		
		float left
		ul
			li
				float left
				width 100%
				padding 10px 15px
				border-bottom 1px solid #ccc
				.foto
					float left
					margin 0 5px 0 0
				.fecha
					font-weight bold
				h3
				h2
					display inline	
					a
						font-size 1em
						display inline
						font-weight bold
				&.selected				
					background #eee
	.footer
		float left
		width 100%
		background white		
		text-align center
		padding 5px
		a
			text-decoration underline
			color black