
.ul_menus
	position relative
	list-style none
	transition all 1s ease-out
	padding-left 0
	input
		display none
	li.group
		text-align left
		label.padre
			border-bottom 1px solid #FFF
			padding 6px 0px 6px 7px
			background color_4
			text-transform uppercase
			color color_5
			display block
			&:hover
				background-color darken(color_4,30)
		.mcontent
			// overflow-x hidden
			// max-height calc(100vh - 200px)
			// overflow-y auto
			overflow hidden
			ul
				margin-top -500%
				margin-bottom -500%
				transition all 1s ease-out
				padding-left 0
				li
					border-bottom 1px dotted #DDDDDD
					overflow hidden
					display block
					a
						display block
						text-align left     
						padding .5em 5px .5em 8px
						font-size 1.2em
						font-weight normal
						line-height 1.3em
						// span.number
						// 	font-size 0.7em
						// 	font-weight normal
						// 	float right
						// 	margin 2px 4px 0 0
						// 	color color_2        
						// 	display none
					&:hover,
					&.selected
						background-color color_1
						a
							color #000
				li.seccion,    
				li.seccion:hover
					background none !important
					border-bottom 1px solid white
					a
						color color_2
						font-size 1.2em
						font-variant small-caps
						margin-top 5px
						padding-left 0
						margin-left 8px
						pointer-events none
						
	.check_padre:checked + li.group
		label.padre
			background-color darken(color_4,30)
		.mcontent
			ul
				margin-top 0
				margin-bottom 0
				transition all 1s ease-out	margin 0px 0 10px 0
