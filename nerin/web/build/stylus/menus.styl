nav
	background-color #fff !important	
	z-index: 1000;
	height auto;
	text-align center
	padding 5px 0
	> ul
		input[type=checkbox]
			display none
		list-style: none;
		padding: 0;
		margin: 0;			
		display: inline-block;
		text-align center
		vertical-align middle
		// margin-right 10px
		> li
			position: relative;
			margin: 0 1px;	
			background-color #fff !important		
			// background: linear-gradient(#2E63AF, #568CCE, #2E63AF);					
			border: 0;
			padding: 0	
			float left
			transition:all 0.5s linear;	
			label
				margin-bottom 0
				display block
			// height 22px								
			// border-radius: 10px 10px 0px 0px;
			// &:before
			// 	background: url($IMAGES_PATH/menu_item_left.png) no-repeat;
			// 	width: 40px;
			// 	content: "";
			// 	height: 22px;
			// 	position: absolute;
			// 	left: -22px;					
			// &:after				
			// 	background: url($IMAGES_PATH/menu_item_right.png) no-repeat;
			// 	width: 22px;
			// 	content: "";
			// 	height: 22px;
			// 	position: absolute;
			// 	right: -21px;
			// 	z-index: 26;				
			a
				height: auto;
				color: #3963b7;
				font-weight: bold;
				// padding: 6px 18px;
				padding: 6px 27px;
				float: left;
				white-space: nowrap;
				font-family: 'Titillium Web',"Helvetica Neue"
				font-size: 1em;
				text-transform: uppercase;
				text-decoration: none;
			// .selected,					
			// &:hover
			// 	transition:all 0.5s linear;					
			// 	background #264F80
			// 	a
			// 		text-decoration: underline
			> .area
				position absolute
				top 25px
				left 0px
				overflow hidden
				box-shadow 4px 2px 10px rgba(#444,0.6)
				> ul
					margin-top -100%
					display block
					transition:all 0.3s linear;
					> li
						background #568CCE
						border-radius 0 !important;
						width 100% 
						clear left
						float left
						border-top 1px solid #ccc
						height auto
						&:before
						&:after
							display none	
						a
							color white
							font-size: 1em;
							padding: 9px 19px;
			&.selected
				a
					color black			
			&:hover
				a
					color black
				.area
					> ul
						margin-top 0%
						transition:all 0.3s linear;							
						>li
							a
								text-decoration: none;
								width 100%
								text-align left
							&:hover
								a
									color #9bd7ff
									text-decoration: underline;






/**
 * PAGES: ASIDE MENU
 */
.menu_left
	// border 5px solid #CCC
	// border-radius 18px
	overflow hidden
	.header
		padding 6px 12px
		h2
			font-family Arial
			font-weight bold			
			font-size 1em
			color white			
			font-family 'Titillium Web' Arial			
			a
				color white			
	.inner	
		width 100%
		min-height 150px
		background white		
		float left
		ul
			li
				float left
				width 100%
				padding 10px 15px
				border-bottom 1px solid #ccc
				.foto
					float left
					margin 0 5px 0 0
				.fecha
					font-weight bold
				h3
				h2
					display inline	
					a
						font-size 1em
						display inline
						font-weight bold
				&.selected				
					background #eee
			li:last-child
				border-bottom 0		
	.footer
		float left
		width 100%
		background white		
		text-align center
		padding 5px
		a
			color black