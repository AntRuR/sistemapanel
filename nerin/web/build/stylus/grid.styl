

/**
 * PAGES:
 */
.page
	.inner
		// LIST
		> ul.listado_items.list
			li.listado_item
				float left
				padding 15px 0px
				width 100%;
				position relative
				.foto
					float left
					margin 0 10px 0 0	
				.nombre
					font-size 1em
					font-weight bold	
				.texto
					display inline				
		// GRID
		> ul.listado_items.grid
			text-align center
			li.listado_item
				float left
				width 33%
				padding 15px 5px
				margin 0 auto
				a.foto
				figure.foto
					display inline-block
					width 150px
					height 110px
					line-height @height
					background white
					border-radius 4px
					padding 0
					text-align center
					border 0
					overflow hidden
					position relative
					img
						margin 0 -25% !important
						border-radius 3px					
		// CONTENT				
		> .content
			text-align justify
			img
				float left
				max-width 100%
				margin 0 15px 15px 0	
	> .footer
		text-align center	


.clientes
	min-height 70vh
	li
		height 200px
		figure
			pagging 0 0 10px 0
			text-align center
			vertical-align middle
			img
				display inline-block
				width auto
				max-height 130px
				// background-color red
			figcaption
				min-height 40px
				clear both
				text-align center
				font-weight bold
				text-transform uppercase

