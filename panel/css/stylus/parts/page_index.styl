body
	display flex
	justify-content center

#div_allcontent
	width 100%
	max-width MAX_WIDTH
	text-align left
	position relative
	margin-top 0px
	// overflow hidden
	border-radius 8px
	background white
	padding 0px 0.5%
	border-radius 8px
	box-sizing border-box

.main_content_con_grid
	display grid
	grid-template-columns 200px 250px 1fr
	grid-template-rows 80px 1fr
	.logo_panel,a.link_header,.menus
		display flex
		flex-direction column
		height HEADER_HEIGHT
		justify-content center		




.main_content
	display flex
	flex-wrap wrap
	// align-content stretch
	padding 0 10px
	.logo_panel,
	a.link_header,
	.menus
		height HEADER_HEIGHT
	.i_mmm
		width 30px
	.logo_panel
		display flex
		flex-direction column
		justify-content center		
		flex-grow 0
		width 200px
		img 
			width auto
			margin auto
	a.link_header
		display flex
		flex-direction column
		justify-content center		
		flex-grow 0
		width 250px
	.menus
		width calc( 100% - 480px )
		flex-grow 1
	.menu_content
		width MENU_WIDTH
		transition width 0.5s linear
		overflow hidden
		.ul_menus
			width MENU_WIDTH - MARGIN_MENU
	.div_bloque_cuerpo
		flex-grow 1
		margin-left 0px
		width "calc(100% - %s )" % MENU_WIDTH
		// width calc(100% - 200px)


.menu_colapsed
	.main_content
		.menu_content
			width 0.1px
			transition width 0.5s linear
		.div_bloque_cuerpo
			transition width 0.5s linear
			width calc( 100% - 2px )


