//BASE	
.block
	margin-bottom 10px
	box-shadow 0 1px 2px rgba(0,0,0,0.4)	
	border 1px solid #f6f6f5
	border-radius 10px
	overflow hidden
	.header
		text-align center
		padding 3px 0
	.vacio
		text-align center	
		padding 15px 0
	// .inner
	.footer	
		padding 4px 4px





/**
 * BLOCK BLUE
 */
.block-blue
	> .header
		background #0c2b7d
		color white
		text-transform uppercase
		min-height 23px;
		text-decoration none
	> .inner
		background white	
	.footer	
		background #568CCE
		color white
