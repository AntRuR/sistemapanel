/**
 * HOME : ITEMS NOTICIAS
 */

.servicios_items_list
	overflow: visible;
	margin 0 -15px
	padding-top 10px
	padding-bottom 0px
	.listado_items
		position: relative;
		display inline-block
		.listado_item
			position: relative;
			float: left;
			// display inline-block
			width: 21%;
			margin: 0 0 10px ( @width*(-0.8) + 20);
			height: 230px;
			background-color: #125586;
			padding: 10px 1.8%;
			border-radius: 10px;
			a.vermas,
			a.nombre
				color: #A0E1FF;
				display: block;
				font-family: Arial
			a.nombre
				height: 24px
				font-size 1.17em
